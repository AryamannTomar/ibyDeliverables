<% layout('layouts/boilerplate')%>
<div class='row'>
    <h1 class='text-center'>Edit-News</h1>
    <div class="col-6 offset-3">
        <form action="/products/<%=product._id%>?_method=PUT" method="POST">
            <div class='mb-3'>
                <label class='form-label' for="news">Description: </label>
                <textarea class='form-control' type="text" name="description" id="news" "><%=product.description%></textarea>
            </div>
            <div class='mb-3'>
                <label class='form-label' for="date">Date: </label>
                <input class='form-control' type="text" id="date" name="date" value="<%=product.date%>">
            </div>
            <div>
                <label class='form-label' for="category">Select Category</label>
                <select name="category" id="category">
                    <% for(let category of categories){ %>
                    <option value="<%=category%>" <%= product.category === category ? 'selected': '' %>><%=category%></option>
                    <% } %>
                </select>
            </div>
            <span>
                <button class='btn btn-info'>Update News</button>
            </span>
            <span>
                <a href='/products/<%=product._id%>' class='btn btn-danger'>Cancel</a>
            </span>
        </form>
    </div>
</div>